# calculate the sum of the first n terms of the harmonic series

!PRECISION 100

BEGIN;

CMP argcount 0;
JEQ noArgs;

# customize

ADD arg_0 1;
ASSIGN terms;

NOP 0;
ASSIGN sum;

FOR k 1 terms 1;

DIV 1 k;
ASSIGN term;

ADD term sum;
ASSIGN sum;

ENDFOR;

PRINT "";
PRINT "sum of first" arg_0 "terms of the harmonic series is" sum;
PRINT "";
JMP end;

MARK noArgs;
PRINT "no arguments passed";

MARK end;

END;

# calculate the sum of the first n terms of the harmonic series

!PRECISION 100

BEGIN;

DISABLEWORK;

IF argcount == 0;
	PRINT "no arguments passed";
	DIE;
ENDIF;

# customize

ADD arg_0 1;
ASSIGN terms;

NOP 0;
ASSIGN sum;

FOR k 1 terms 1;
	DIV 1 k;
	ASSIGN term;

	ADD term sum;
	ASSIGN sum;
ENDFOR;

PRINT "";
PRINT "sum of first " arg_0 " terms of the harmonic series is " sum;
PRINT "";

END;
